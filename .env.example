# Target under test
BASE_URL=http://localhost:5173

# Browser
BROWSER=chromium   # chromium | firefox | webkit
HEADLESS=true
VIEWPORT_WIDTH=1440
VIEWPORT_HEIGHT=900

# Timeouts (ms)
NAV_TIMEOUT=30000
ACTION_TIMEOUT=15000
EXPECT_TIMEOUT=10000

# Evidence
TRACE=onfail       # on | onfail | off
VIDEO=off          # on | onfail | off
SCREENSHOT=onfail  # on | onfail | off

# Cucumber execution
PARALLEL=1
RETRY=1

# Logging
DETAILED_LOGS=true
LOG_TO_CONSOLE=true

# Test credentials (optional)
TEST_EMAIL=
TEST_PASSWORD=
TEST_ADMIN_EMAIL=
TEST_ADMIN_PASSWORD=
